mixin intro( content )
	// intro
	table(align='center' border='0' cellpadding='0' cellspacing='0' style='border-collapse:collapse;mso-table-lspace:0;mso-table-rspace:0;' width='100%')
		tbody
			tr
				td(align='center' style='border-collapse:collapse;mso-line-height-rule:exactly;' valign='top')
					table(align='center' border='0' cellpadding='0' cellspacing='0' style='border-collapse:collapse;mso-table-lspace:0;mso-table-rspace:0;' width='100%')
						tbody
							tr
								td(height='17' style='font-size:1px;line-height:1px;border-collapse:collapse;mso-line-height-rule:exactly;')
									img(border='0' height='1' name='Cont_0' src='http://i3.createsend1.com/ti/j/B1/C4B/218/103104/images/spacer.gif' style='display:block;border-width:0 !important;outline-style:none !important;' width='1')
			tr
				td(style='font-family:Helvetica, Arial, sans-serif;font-size:24px;line-height:26px;color:#000000;text-align:left;border-collapse:collapse;mso-line-height-rule:exactly;') Hi [firstname,fallback=there],
			tr
				td(height='17' style='font-size:1px;line-height:1px;border-collapse:collapse;mso-line-height-rule:exactly;')
					img(border='0' height='1' name='Cont_0' src='http://i3.createsend1.com/ti/j/B1/C4B/218/103104/images/spacer.gif' style='display:block;border-width:0 !important;outline-style:none !important;' width='1')
			tr
				td(style='font-family:Helvetica, Arial, sans-serif;font-size:14px;line-height:21px;color:#000000;text-align:left;border-collapse:collapse;mso-line-height-rule:exactly;') content
			tr
				td(height='17' style='font-size:1px;line-height:1px;border-collapse:collapse;mso-line-height-rule:exactly;')
					img(border='0' height='1' name='Cont_0' src='http://i3.createsend1.com/ti/j/B1/C4B/218/103104/images/spacer.gif' style='display:block;border-width:0 !important;outline-style:none !important;' width='1')
	// /intro


