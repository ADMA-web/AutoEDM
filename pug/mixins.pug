mixin gutters( width=20 )
  table(align='center', border='0', cellpadding='0', cellspacing='0', width='100%')
    tr
      td.em_width(width=width)
      td(valign='top')
        if block
          block
      td.em_width(width=width)

mixin spacerV( height=20 )
  // vertical spacer
  table(align='center', border='0', cellpadding='0', cellspacing='0', width='100%')
    tbody
      tr
        td.em_height(height=height, style='font-size:1px; line-height:1px;').
          &nbsp;
  // /vertical spacer